<% @categories.each do |category| %>
    <div class="col-sm-6 my-4">
        <div class=container>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title"><%= category.title %></h2>
                    <hr>
                    <p class="card-text"><%= category.description %></p>
                    <div class="float-right"><%= render 'learn', category: category %></div>
                </div>    
            </div>
        </div>
    </div>
<% end %>