<% provide(:title, "Lesson") %>
<div class="form content my-4">
    <div class="jumbotron" style="background-color: #343A40;">
        <h1 class="text-center text-white"><%= @category.title %></h1>
    </div>
    <div class="container d-flex justify-content-center">
        <div class="jumbotron w-75" style="background-color: #343A40;">
            <div class="container text-light">
                <div>
                    <% @word.each do |word| %>
                        <h1 class="text-center text-white"><%= word.word %></h1>
                        <div class="float-right">
                            <%= page_entries_info @word %>
                        </div>
                        <hr color="#ffffff" class="my-4" style="clear: both;">
                            <% word.choices.each do |choice| %>
                                <div class="d-flex justify-content-center w-100">
                                    <%= render 'form', word: word, choice: choice %>
                                </div>
                            <% end %>
                    <% end %>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <%# will_paginate @word %>
                </div>
            </div>
        </div>
    </div>    
</div>