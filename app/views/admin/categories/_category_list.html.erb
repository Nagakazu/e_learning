<% @categories.each do |category| %>
    <div class="col-sm-6 my-4">
        <div class=container>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title float-left"><%= category.title %></h2>
                    <%= link_to "Edit Categoy", edit_admin_category_path(category), class:"btn btn-primary ml-4" %>
                    <div class="d-inline float-right"> 
                        <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "You sure?"} %>
                    </div>
                    <hr style="clear: both;">
                    <p class="card-text"><%= category.description %></p>
                    <%= link_to "Manage Words", admin_words_path(category), class:"btn btn-success ml-4 float-right" %>
                </div>    
            </div>
        </div>
    </div>
<% end %>