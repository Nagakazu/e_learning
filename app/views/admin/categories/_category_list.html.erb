<% @categories.each do |category| %>
    <div class="col-sm-6 my-4">
        <div class=container>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-text"><%= link_to category.title, admin_category_path(category) %></h2>
                    <hr style="clear: both;">
                    <p class="card-text"><%= category.description %></p>
                    <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "You sure?"}, class: "btn btn-danger float-right" %>
                    <%= link_to "Edit Categoy", edit_admin_category_path(category), class:"btn btn-primary ml-4 float-right" %>
                    <%# link_to "Manage Words", admin_words_path(category), class:"btn btn-success ml-4 float-right" %>
                </div>    
            </div>
        </div>
    </div>
<% end %>