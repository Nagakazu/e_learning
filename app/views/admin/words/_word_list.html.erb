<% @words.each do |word| %>
    <div class="col-sm-4 my-4" style="clear: both;">
        <div class=container>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title"><%= word.word %></h2>
                    <hr>
                    <p class="card-text">Answer:<%# choice.correct %></p>
                    <%= link_to "Edit word", edit_admin_word_path(word), class:"btn btn-primary ml-4" %>
                    <div class="d-inline float-right"> 
                        <%= link_to "Delete", admin_word_path(word), method: :delete, data: { confirm: "You sure?"} %>
                    </div>
                </div>    
            </div>
        </div>
    </div>
<% end %>