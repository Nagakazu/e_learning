<% @words.each do |word| %>
    <div class="col-sm-4 my-4" style="clear: both;">
        <div class=container>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title"><%= word.word %></h2>
                    <hr style="clear: both;">
                    <p class="card-text">Answer: <%# choice.correct %></p>
                    <%= link_to "Delete", admin_category_word_path(@category, word), method: :delete, data: { confirm: "You sure?"}, class: "btn btn-danger float-right" %>
                    <%= link_to "Edit word", edit_admin_category_word_path(@category, word), class:"btn btn-primary ml-4  float-right" %>
                </div>    
            </div>
        </div>
    </div>
<% end %>