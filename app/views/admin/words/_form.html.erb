<%= form_for ([:admin, @category, @word]) do |f| %>
        <%= f.label :word %>
        <%= f.text_field :word, class: "form-control mb-4" %>
        <%= f.fields_for :choices do |choice| %>
            <%= choice.label :choice %>
            <%= choice.check_box :correct %>
            <%= choice.text_field :choice, class: "form-control mb-4" %>
        <% end %> 
    <%= f.submit yield(:button_text), class:"btn btn-block btn-primary mt-4" %>
<% end %>